{
  "name": "react-zoom",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "styled-components": "^5.3.3",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "commit": "git-cz",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix",
      "yarn test --findRelatedTests --bail"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        "feat": {
          "title": "New features",
          "description": "Add new features"
        },
        "fix": {
          "title": "Fix one ore more bugs",
          "description": "Bugfix"
        },
        "docs": {
          "title": "Documentation",
          "description": "Change docs"
        },
        "style": {
          "title": "Code style",
          "description": "Changes that doesn't affect directly the code logic (white-space, formatation, etc)"
        },
        "refactor": {
          "title": "Refactor",
          "description": "Refactors a piece of the code"
        },
        "perf": {
          "title": "Perf",
          "description": "Features that optimizes the app performance"
        },
        "test": {
          "title": "Tests",
          "description": "Add new tests or fix the existent ones"
        },
        "build": {
          "title": "Build",
          "description": "Changes that affect the build process or external dependencies (example scopes: webpack, npm)"
        },
        "ci": {
          "title": "CI",
          "description": "Changes ci's configuration or script"
        },
        "chore": {
          "title": "Tasks",
          "description": "Other changes that doesn't affect source code or tests"
        },
        "revert": {
          "title": "Revert",
          "description": "Undo a previous commit"
        }
      }
    }
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@storybook/addon-actions": "^6.4.9",
    "@storybook/addon-essentials": "^6.4.9",
    "@storybook/addon-links": "^6.4.9",
    "@storybook/builder-webpack5": "^6.4.9",
    "@storybook/manager-webpack5": "^6.4.9",
    "@storybook/node-logger": "^6.4.9",
    "@storybook/preset-create-react-app": "^4.0.0",
    "@storybook/react": "^6.4.9",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/styled-components": "^5.1.19",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-plugin-styled-components": "^2.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^27.4.5",
    "jest-styled-components": "^7.0.8",
    "lint-staged": "^12.1.5",
    "prettier": "^2.5.1",
    "standard-version": "^9.0.0",
    "webpack": "^5.65.0"
  }
}
